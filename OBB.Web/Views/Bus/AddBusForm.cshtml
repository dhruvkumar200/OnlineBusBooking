@model OBB.Models.AddBusModel
@{
Layout="_Layout1";
}
<style>
    .heading {
        color: #4CAF50;
    }

    label {
        font-weight: 600;
        color: #666;
    }

    body {
        background: #f1f1f1;
    }

    .box8 {
        box-shadow: 0px 0px 5px 1px #999;
        margin-top: 20px;
    }

    .mx-t3 {
        margin-top: 2rem;
        font-size: 25px;
    }

    .btn {
        background-color: #4CAF50;
        color: white;
    }

    .btn:hover {
        background-color: #4CAF50;
        color: white;
    }

}

</style>

<div class="container mt-5 ">

    @using (Html.BeginForm("AddBusDetail", "Bus", FormMethod.Post, new
    {
        id = "formRegistration",
        enctype =
    "multipart/form-data"
    }))
    {
        <div class="row jumbotron box8">
            <div class="col-sm-12 mx-t3 mb-5">
                <h1 class="text-center heading">Add Bus Details </h1>
            </div>
            <br>
            @Html.HiddenFor(x=>x.Id)
            <div class="col-sm-6 form-group mb-3">
                <label for="BusNo" class="col-md-3 control-label"> BusNo</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x =>x.BusNo, "", new { @class = "form-control", placeholder = "BusNo" })
                    @Html.ValidationMessageFor(x => x.BusNo,"",new{@class="text-danger"})
                </div>
            </div>
            <br />
            <div class="col-sm-6 form-group mb-3">
                <label for="Name" class="col-md-3 control-label"> BusName</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x =>x.Name, "", new { @class = "form-control", placeholder = "BusName" })
                    @Html.ValidationMessageFor(x => x.Name,"",new{@class="text-danger"})
                </div>
            </div>
            <br />
            <div class="col-sm-6 form-group mb-3">
                <label for="BusType" class="col-md-3 control-label"> BusType</label>
                <div class="col-md-9">
                <select name="BustypeId" class="form-control" asp-items="@ViewBag.Types"></select>
                    @Html.ValidationMessageFor(x => x.BustypeId)
                </div>
            </div>
            <br />
            <div class="col-sm-6 form-group mb-3">
                <label for="NoofSeats" class="col-md-3 control-label"> No of Seats</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x =>x.Seats, "", new { @class = "form-control", placeholder = "No of Seats" })
                    @Html.ValidationMessageFor(x => x.Seats,"",new{@class="text-danger"})
                </div>
            </div>
            <br />

            <div class="col-sm-6 form-group mb-3">
                <label for="contact" class="col-md-3 control-label">RouteFrom</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.RouteFrom, new { @class = "form-control", placeholder = "Routefrom" })
                    @Html.ValidationMessageFor(x => x.RouteFrom,"",new{@class="text-danger"})
                </div>
            </div>
            <br />

            <div class="col-sm-6 form-group mb-3">
                <label for="password" class="col-md-3 control-label">RouteTo</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.RouteTo, new { @class = "form-control", placeholder = "RouteTo" })
                    @Html.ValidationMessageFor(x => x.RouteTo,"",new{@class="text-danger"})
                </div>
            </div>
            <br />

            <div class="container">
                <div class="row">
                    <div>
                        @Html.Label("Bus Time", null, new { @class = "control-label col-xs-3" })
                        <div class="col-xs-3">
                           <input type="Time" asp-for="Time" placeholder="Time">
                        </div>
                    </div>
                </div>
            </div>
            <br />

            <div class="col-sm-6 form-group mb-3">
                <label for="Date" class="col-md-3 control-label">Date</label>
                <div class="col-md-9">
                    <input type="Date" asp-for="Date" placeholder="Date">
                </div>
            </div>

   <div class="col-md-offset-3 col-md-12 text-center mb-3">
  <button id="btn-signup" type="submit" class="btn btn-info mx-auto"><i class="icon-hand-right"></i>Submit</button>
</div>



        </div>


    }

</div>

