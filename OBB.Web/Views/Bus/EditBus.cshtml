@model OBB.Models.AddBusModel
@{

}
<h2 class="text-center">Edit Details</h2>

@using (Html.BeginForm( "EditBusDetail","Bus", FormMethod.Post, new { id = "formRegistration", enctype = "multipart/form-data" }))
{ 
     @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        <label for="Name" class="col-md-3 control-label"> BusName</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x =>x.Name, "", new { @class = "form-control", placeholder = "BusName" })
            @Html.ValidationMessageFor(x => x.Name,"",new{@class="text-danger"})
        </div>
    </div>
    <br />

    <div class="form-group">
        <label for="contact" class="col-md-3 control-label">RouteFrom</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.RouteFrom, new { @class = "form-control", placeholder = "Routefrom" })
            @Html.ValidationMessageFor(x => x.RouteFrom,"",new{@class="text-danger"})
        </div>
    </div>
    <br />

    <div class="form-group">
        <label for="password" class="col-md-3 control-label">RouteTo</label>
        <div class="col-md-9">
            @Html.TextAreaFor(x => x.RouteTo, new { @class = "form-control", placeholder = "RouteTo" })
            @Html.ValidationMessageFor(x => x.RouteTo,"",new{@class="text-danger"})
        </div>
    </div>
    <br />

    <div class="form-group">
        <label for="Phone" class="col-md-3 control-label">BusTime</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Time, new { @class = "form-control", placeholder = "BusTIme" })
            @Html.ValidationMessageFor(x => x.Time,"",new{@class="text-danger"})
        </div>
    </div>


    <div class="col-md-offset-3 col-md-9">
        <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Submit</button>
        <span style="margin-left:8px;"></span>
    </div>

}

